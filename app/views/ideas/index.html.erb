    <!--============================= SUBPAGE HEADER BG =============================-->
    <section class="subpage-bg">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="titile-block title-block_subpage">
                        <h2>All The Awesome Ideas</h2>
                        <p><a href="/"> Home</a> / Blog</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
